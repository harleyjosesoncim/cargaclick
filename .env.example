############################################################
# CargaClick — .env.example (NÃO COMITAR .env real)
# Duplique como `.env` só em DEV. Em produção, configure
# no provedor (Render/Fly) — nunca .env no repo.
############################################################

#######################
# Rails / App
#######################
RAILS_ENV=development
RACK_ENV=development
NODE_ENV=development
PORT=3000

# URL base usada por url_helpers (Devise, mails, links)
# Manter os dois nomes para compatibilidade com o código:
DEFAULT_URL_HOST=localhost
DEFAULT_URL_PROTOCOL=http
APP_HOST=${DEFAULT_URL_HOST}
APP_PROTOCOL=${DEFAULT_URL_PROTOCOL}

# Threads Puma (bater com puma.rb)
RAILS_MAX_THREADS=5
RAILS_MIN_THREADS=5

# Logs
RAILS_LOG_LEVEL=debug

#######################
# Chaves
#######################
# Gere em DEV com: `bin/rails secret`
SECRET_KEY_BASE=please_generate_me
DEVISE_SECRET_KEY=${SECRET_KEY_BASE}

#######################
# Banco de Dados (PostgreSQL)
#######################
# Formato: postgres://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgres://postgres:postgres@localhost:5432/cargaclick_development

#######################
# Redis / Action Cable
#######################
REDIS_URL=redis://localhost:6379/1

#######################
# SMTP (Action Mailer)
#######################
# Dica: para Gmail, ative 2FA e use "App Password".
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_DOMAIN=localhost
SMTP_AUTH=plain
SMTP_ENABLE_STARTTLS_AUTO=true

# Remetente padrão
MAILER_SENDER=no-reply@cargaclick.app

#######################
# Mercado Pago
#######################
# Token de acesso da conta (produção/homolog)
MP_ACCESS_TOKEN=

#######################
# Observabilidade (Sentry)
#######################
SENTRY_DSN=
SENTRY_ENV=development
SENTRY_TRACES_SAMPLE_RATE=0.2
SENTRY_PROFILES_SAMPLE_RATE_
