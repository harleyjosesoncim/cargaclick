# ============================================
# CargaClick - Exemplo de variáveis de ambiente
# Este arquivo NÃO deve conter chaves reais.
# Copie para `.env` e preencha com valores reais.
# ============================================

# === Banco de Dados PostgreSQL ===
DATABASE_URL=postgresql://usuario:senha@host:5432/cargaclick_production
PGUSER=usuario
PGPASSWORD=senha
PGHOST=host
PGPORT=5432
PGDATABASE=cargaclick_production

# === Chaves de API ===
# OpenRouteService (cálculo de distância)
ORS_API_KEY=sua_chave_aqui
OPEN_ROUTE_SERVICE_API_KEY=sua_chave_aqui

# OpenAI (geração de propostas comerciais)
OPENAI_API_KEY=sua_chave_aqui

# Mercado Pago (assinaturas e pagamentos)
MERCADO_PAGO_PLAN_URL=https://www.mercadopago.com.br/subscriptions/checkout?preapproval_plan_id=XXXX
MERCADO_PAGO_PLAN_ID=XXXX

# === Segurança do Rails ===
RAILS_MASTER_KEY=sua_chave_aqui

# === Configuração de SMTP (envio de e-mails) ===
SMTP_ADDRESS=smtp.sendgrid.net
SMTP_PORT=587
SMTP_DOMAIN=seu-dominio.com
SMTP_USER=apikey
SMTP_PASSWORD=sua_senha_api
SMTP_AUTH_METHOD=plain
SMTP_ENABLE_STARTTLS_AUTO=true

# === Opções de Produção ===
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true

# === Configuração de URL ===
APP_HOST=https://cargaclick.com.br
APP_NAME=CargaClick
DEFAULT_EMAIL=contato@cargaclick.com.br
SUPPORT_EMAIL=suporte@cargaclick.com.br
