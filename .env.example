############################################################
# CargaClick — .env.example (NÃO COMITAR .env real)
# Duplicar como `.env` só em DEV. Em produção, use variáveis
# de ambiente do provedor (Render/Fly) — nunca .env no repo.
############################################################

########################
# Rails / App
########################
RAILS_ENV=development
RACK_ENV=development
PORT=3000

# Host usado por url_helpers (Devise, mails, etc.)
DEFAULT_URL_HOST=localhost
DEFAULT_URL_PROTOCOL=http

# Chaves (gerar com: `bin/rails secret`)
SECRET_KEY_BASE=please_generate_me
DEVISE_SECRET_KEY=${SECRET_KEY_BASE}

# Sender padrão dos e-mails do app
MAILER_SENDER=no-reply@cargaclick.app

########################
# Banco de Dados (PostgreSQL)
########################
# Formato: postgres://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgres://postgres:postgres@localhost:5432/cargaclick_development

########################
# SMTP (Action Mailer)
########################
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_DOMAIN=example.com
SMTP_USERNAME=username@example.com
SMTP_PASSWORD=please_set_me
SMTP_AUTH=plain              # plain/login/cram_md5
SMTP_ENABLE_STARTTLS_AUTO=true
SMTP_OPENSSL_VERIFY_MODE=none  # ou 'peer' se tiver CA ok
# Se usar TLS direto (465), configure no environment.rb/production.rb: :ssl => true

########################
# OpenRouteService (distâncias)
########################
ORS_API_KEY=your_ors_key_here
# opcional alias amigável
OPEN_ROUTE_SERVICE_API_KEY=${ORS_API_KEY}

########################
# Mercado Pago (assinaturas)
########################
# URL do checkout do plano (preapproval)
MERCADO_PAGO_PLAN_URL=https://www.mercadopago.com.br/subscriptions/checkout?preapproval_plan_id=YOUR_PLAN_ID
# ID do plano (se o código precisar)
MERCADO_PAGO_PLAN_ID=YOUR_PLAN_ID

########################
# OpenAI (se realmente usado)
########################
OPENAI_API_KEY=your_openai_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_ORG_ID=

########################
# Rails Master Key (SOMENTE local)
########################
# NUNCA comitar a master.key real. Em produção use credenciais via ENV
# e deixe `config.require_master_key = false` OU injete RAILS_MASTER_KEY no provedor.
RAILS_MASTER_KEY=
