{
  "name": "cargaclick",
  "private": true,
  "version": "1.0.0",
  "description": "Aplicativo CargaClick - Rails 7 com ESBuild e TailwindCSS",
  "license": "MIT",
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=18.18 <23",
    "yarn": ">=1.22.0 <2"
  },
  "scripts": {
    "build:js": "esbuild app/javascript/application.js --bundle --sourcemap --outdir=app/assets/builds --minify",
    "build:css": "tailwindcss -c ./config/tailwind.config.js -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css -m",
    "build": "yarn build:js && yarn build:css",
    "dev:js": "esbuild app/javascript/application.js --bundle --sourcemap --outdir=app/assets/builds --watch",
    "dev:css": "tailwindcss -c ./config/tailwind.config.js -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --watch",
    "dev": "concurrently -n js,css -c auto \"yarn dev:js\" \"yarn dev:css\"",
    "clean:builds": "rimraf app/assets/builds/*",
    "update:browserslist": "npx update-browserslist-db@latest --update-db"
  },
  "dependencies": {
    "@rails/actioncable": "^8.0.200",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "dotenv": "^17.2.1",
    "leaflet": "^1.9.4"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "esbuild": "^0.23.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.14"
  },
  "browserslist": {
    "production": [
      "defaults",
      "not ie <= 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
