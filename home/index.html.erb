<div class="max-w-6xl mx-auto px-4 py-10">
  <h1 class="text-4xl font-bold text-center text-orange-600 mb-10">CargaClick 🚛</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Seção Cliente -->
    <section class="bg-white rounded-2xl shadow-md p-6 text-center">
      <h2 class="text-2xl font-semibold text-blue-600 mb-2">Sou um Cliente</h2>
      <p class="text-gray-500 mb-4">Solicite fretes e acompanhe suas entregas</p>
      <div class="flex flex-col gap-4">
        <%= link_to "🚀 Solicitar Frete", new_frete_path, class: "bg-orange-100 hover:bg-orange-200 text-orange-700 font-semibold px-6 py-3 rounded-xl shadow transition duration-300 ease-in-out w-full md:w-auto" %>
        <%= link_to "📋 Clientes", clientes_path, class: "bg-blue-100 hover:bg-blue-200 text-blue-700 font-semibold px-6 py-3 rounded-xl shadow transition duration-300 ease-in-out w-full md:w-auto" %>
      </div>
    </section>

    <!-- Seção Transportador -->
    <section class="bg-white rounded-2xl shadow-md p-6 text-center">
      <h2 class="text-2xl font-semibold text-green-600 mb-2">Sou um Transportador</h2>
      <p class="text-gray-500 mb-4">Gerencie propostas e acompanhe seus fretes</p>
      <div class="flex flex-col gap-4">
        <%= link_to "🚚 Transportadores", transportadores_path, class: "bg-green-100 hover:bg-green-200 text-green-700 font-semibold px-6 py-3 rounded-xl shadow transition duration-300 ease-in-out w-full md:w-auto" %>
        <%= link_to "⚙️ Administração", rails_admin_path, class: "bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold px-6 py-3 rounded-xl shadow transition duration-300 ease-in-out w-full md:w-auto" %>
      </div>
    </section>
  </div>
</div>

