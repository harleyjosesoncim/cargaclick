<div class="max-w-6xl mx-auto px-4 py-10">
  <h1 class="text-4xl font-bold text-center text-orange-600 mb-10">CargaClick 🚛</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Seção Cliente -->
    <div class="bg-white rounded-2xl shadow-md p-6">
      <h2 class="text-2xl font-semibold text-blue-600 mb-6 text-center">Sou um Cliente</h2>
      <div class="flex flex-col gap-4">
        <%= link_to "🚀 Solicitar Frete", new_frete_path, class: "bg-orange-100 hover:bg-orange-200 text-orange-700 font-semibold px-6 py-3 rounded-xl shadow" %>
        <%= link_to "🧑‍💼 Clientes", clientes_path, class: "bg-blue-100 hover:bg-blue-200 text-blue-700 font-semibold px-6 py-3 rounded-xl shadow" %>
      </div>
    </div>

    <!-- Seção Transportador -->
    <div class="bg-white rounded-2xl shadow-md p-6">
      <h2 class="text-2xl font-semibold text-green-600 mb-6 text-center">Sou um Transportador</h2>
      <div class="flex flex-col gap-4">
        <%= link_to "🚚 Transportadores", transportadores_path, class: "bg-green-100 hover:bg-green-200 text-green-700 font-semibold px-6 py-3 rounded-xl shadow" %>
        <%= link_to "⚙️ Administração", rails_admin_path, class: "bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold px-6 py-3 rounded-xl shadow" %>
      </div>
    </div>
  </div>
</div>
