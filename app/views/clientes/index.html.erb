<% content_for :title, "Clientes — CargaClick" %>

<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold">Clientes</h1>
  <%= form_with url: clientes_path, method: :get, local: true, class: "flex gap-2" do %>
    <input type="text" name="q" value="<%= h(@q) %>" placeholder="Buscar por nome ou e-mail" class="border rounded-lg px-3 py-2" />
    <button class="bg-blue-600 text-white rounded-lg px-4 py-2">Buscar</button>
  <% end %>
</div>

<div class="bg-white rounded-2xl shadow p-4 overflow-x-auto">
  <table class="min-w-full">
    <thead>
      <tr class="text-left border-b">
        <th class="py-2 pr-4">#</th>
        <th class="py-2 pr-4">Nome</th>
        <th class="py-2 pr-4">E-mail</th>
        <th class="py-2 pr-4">Criado em</th>
      </tr>
    </thead>
    <tbody>
      <% if @clientes.present? %>
        <% @clientes.each_with_index do |c, i| %>
          <tr class="border-b hover:bg-gray-50">
            <td class="py-2 pr-4"><%= i + 1 %></td>
            <td class="py-2 pr-4"><%= safe_val(c.try(:nome) || c.try(:name)) %></td>
            <td class="py-2 pr-4"><%= safe_val(c.try(:email)) %></td>
            <td class="py-2 pr-4"><%= c.respond_to?(:created_at) && c.created_at ? l(c.created_at, format: :short) : "—" %></td>
          </tr>
        <% end %>
      <% else %>
        <tr><td colspan="4" class="py-4 text-gray-600">Nenhum cliente encontrado.</td></tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= simple_pagination({ controller: :clientes, action: :index, q: @q }, @pager) %>