<h1>Entrar</h1>

<%= form_with scope: resource_name,
              url: session_path(resource_name),
              data: { turbo: false } do |f| %>
  <div>
    <%= f.label :email, "E-mail" %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <%= f.label :password, "Senha" %><br>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div>
      <%= f.check_box :remember_me %> <%= f.label :remember_me, "Lembrar-me" %>
    </div>
  <% end %>

  <div>
    <%= f.submit "Entrar" %>
  </div>
<% end %>

<div style="margin-top:1rem">
  <% if devise_mapping.registerable? %>
    <%= link_to "Criar conta", new_registration_path(resource_name) %><br>
  <% end %>
  <% if devise_mapping.recoverable? %>
    <%= link_to "Esqueci minha senha", new_password_path(resource_name) %>
  <% end %>
</div>
