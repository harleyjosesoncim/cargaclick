<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 p-4">
  <div class="bg-white rounded-3xl shadow-2xl p-8 sm:p-10 max-w-md w-full border border-blue-200">

    <div class="flex items-center justify-center mb-6">
      <div class="text-4xl text-blue-600">🔐</div>
    </div>

    <h2 class="text-2xl font-bold text-center text-blue-700 mb-6">Login Cliente</h2>

    <%= form_with scope: resource_name, url: cliente_session_path, html: { autocomplete: "off" }, local: true, class: "space-y-6" do |f| %>
      
      <% if flash[:alert] %>
        <div class="bg-red-100 text-red-700 px-4 py-2 rounded text-sm">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, required: true, autofocus: true, class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, required: true, class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="flex items-center justify-between">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, class: "text-sm text-gray-600" %>
        <%= link_to "Esqueceu a senha?", new_cliente_password_path, class: "text-sm text-blue-600 hover:underline ml-auto" %>
      </div>

      <div>
        <%= f.submit "Entrar", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded shadow" %>
      </div>

    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600">
      Não tem uma conta?
      <%= link_to "Criar Conta", new_cliente_registration_path, class: "text-blue-600 hover:underline font-medium" %>
    </div>
  </div>
</div>
