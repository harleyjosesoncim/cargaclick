<% content_for :title, "Entrar no CargaClick" %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 p-4">
  <div class="bg-white rounded-3xl shadow-2xl p-6 sm:p-8 max-w-md w-full border border-blue-200">

    <div class="flex items-center justify-center mb-4">
      <span class="text-4xl text-blue-600" aria-hidden="true">ğŸ”</span>
    </div>

    <h1 class="text-2xl font-bold text-center text-blue-700">
      Entrar no CargaClick
    </h1>

    <% if flash[:alert].present? || flash[:notice].present? %>
      <div class="mt-4 rounded-md border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
        <%= flash[:alert] || flash[:notice] %>
      </div>
    <% end %>

    <%= form_for(resource,
          as: resource_name,
          url: session_path(resource_name),
          data: { turbo: false },
          html: { class: "mt-6 space-y-5", autocomplete: "on" }) do |f| %>

      <!-- Email -->
      <div>
        <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email,
              required: true,
              autofocus: true,
              autocomplete: "username",
              class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Senha -->
      <div>
        <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password,
              required: true,
              autocomplete: "current-password",
              class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <label class="flex items-center gap-2 text-sm text-gray-700">
          <%= f.check_box :remember_me %>
          Lembrar-me
        </label>
      <% end %>

      <button type="submit"
              class="w-full rounded-lg bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 transition">
        Entrar
      </button>
    <% end %>

    <!-- LINKS AUXILIARES -->
    <div class="mt-6 text-center text-sm text-gray-700 space-y-2">

      <%= link_to "Esqueci minha senha",
            new_password_path(:cliente),
            class: "block text-blue-600 hover:underline" %>

      <%= link_to "Criar nova conta",
            new_registration_path(:cliente),
            class: "block text-blue-600 hover:underline" %>

      <!-- âœ… CORRETO: helper Devise do Transportador -->
      <div class="pt-2 text-gray-500">
        Ã‰ transportador?
        <%= link_to "Acesse aqui",
              new_transportador_session_path,
              class: "text-indigo-600 hover:underline font-medium" %>
      </div>

    </div>

  </div>
</div>

