<%# app/views/clientes/sessions/new.html.erb %>
<% content_for :title, "Entrar — CargaClick" %>

<%# caminho seguro para POST /clientes/sign_in %>
<% login_path =
     if respond_to?(:cliente_session_path)
       cliente_session_path
     elsif respond_to?(:session_path) # fallback do devise
       session_path(:cliente)
     else
       "/clientes/sign_in" # último recurso
     end %>

<div class="bg-white rounded-xl shadow p-6 max-w-md mx-auto">
  <h1 class="text-2xl font-bold mb-4">Entrar</h1>

  <% if flash[:alert].present? %>
    <div class="mb-3 text-red-700 bg-red-50 border border-red-200 rounded p-3">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if flash[:notice].present? %>
    <div class="mb-3 text-blue-700 bg-blue-50 border border-blue-200 rounded p-3">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%# não usamos resource/resource_name; usamos scope :cliente %>
  <%= form_with url: login_path, scope: :cliente, method: :post, data: { turbo: false } do |f| %>
    <div class="mb-4">
      <%= f.label :email, "E-mail", class: "block text-sm font-medium mb-1" %>
      <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email",
            class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, "Senha", class: "block text-sm font-medium mb-1" %>
      <%= f.password_field :password, required: true, autocomplete: "current-password",
            class: "w-full border rounded px-3 py-2" %>
    </div>

    <%# só mostra remember_me se o escopo tiver o módulo rememberable %>
    <% if (defined?(Devise) && Devise.mappings[:cliente]&.rememberable?) rescue false %>
      <div class="mb-4 flex items-center gap-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Manter conectado" %>
      </div>
    <% end %>

    <%= f.submit "Entrar",
          class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded" %>
  <% end %>

  <div class="mt-4 text-sm text-center space-x-4">
    <%# links do Devise (somente se as rotas existirem) %>
    <% if respond_to?(:new_cliente_password_path) %>
      <%= link_to "Esqueci minha senha", new_cliente_password_path, class: "text-blue-700 underline" %>
    <% end %>
    <% if respond_to?(:new_cliente_registration_path) %>
      <%= link_to "Criar conta", new_cliente_registration_path, class: "text-blue-700 underline" %>
    <% end %>
  </div>

  <%# render do partial apenas se existir (evita 500) %>
  <% if lookup_context.exists?("clientes/shared/links", [], true) %>
    <div class="mt-4"><%= render "clientes/shared/links" %></div>
  <% end %>
</div>

