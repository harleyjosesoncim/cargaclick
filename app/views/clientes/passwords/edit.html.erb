<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 p-4">
  <div class="bg-white rounded-3xl shadow-2xl p-8 sm:p-10 max-w-md w-full border border-blue-200">

    <div class="flex items-center justify-center mb-6">
      <div class="text-4xl text-blue-600">ğŸ”’</div>
    </div>

    <h2 class="text-2xl font-bold text-center text-blue-700 mb-6">Definir Nova Senha (Cliente)</h2>

    <%= form_with url: cliente_password_path, method: :put, local: true, class: "space-y-6" do |f| %>
      <%= hidden_field_tag :reset_password_token, params[:reset_password_token] %>

      <div>
        <%= f.label :password, "Nova Senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, required: true, autofocus: true, class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirme a Nova Senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, required: true, class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.submit "Alterar Senha", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded shadow" %>
      </div>
    <% end %>
  </div>
</div>
