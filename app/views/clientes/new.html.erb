<!-- app/views/clientes/new.html.erb -->
<div class="container mx-auto p-4">
  <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Novo Cliente</h1>

  <%# Adicionado data: { turbo: false } para garantir que o formulÃ¡rio seja submetido via POST para /clientes corretamente %>
  <%= form_with model: @cliente, local: true, data: { turbo: false }, class: "bg-white p-8 rounded-lg shadow-md max-w-md mx-auto" do |f| %>
    <% if @cliente.errors.any? %>
      <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <p class="font-bold">Ocorreram <%= pluralize(@cliente.errors.count, "erro") %>:</p>
        <ul class="list-disc ml-5 mt-2">
          <% @cliente.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-5">
      <%= f.label :nome, "Nome do Cliente", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :nome, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-blue-500", placeholder: "Nome completo do cliente" %>
    </div>

    <div class="mb-6">
      <%= f.label :email, "Email do Cliente", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-blue-500", placeholder: "email@exemplo.com" %>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit "Salvar Cliente", class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer transition duration-300 ease-in-out" %>
      <%= link_to 'Voltar', clientes_path, class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
    </div>
  <% end %>
</div>
