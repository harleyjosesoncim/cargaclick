<%= form_with(model: cliente, local: true, class: "space-y-6") do |f| %>
  <% if cliente.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg shadow">
      <h2 class="font-bold flex items-center gap-2">
        ⚠ <span><%= pluralize(cliente.errors.count, "erro") %> impediram o salvamento:</span>
      </h2>
      <ul class="mt-2 list-disc list-inside text-sm">
        <% cliente.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Nome -->
  <div>
    <%= f.label :nome, "Nome Completo", class: "block text-sm font-medium text-gray-700 dark:text-gray-200" %>
    <%= f.text_field :nome, required: true,
          placeholder: "Ex: João da Silva",
          class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm 
                 focus:border-blue-500 focus:ring-blue-500 sm:text-sm
                 dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
  </div>

  <!-- Email -->
  <div>
    <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-700 dark:text-gray-200" %>
    <%= f.email_field :email, required: true,
          placeholder: "exemplo@email.com",
          class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm 
                 focus:border-blue-500 focus:ring-blue-500 sm:text-sm
                 dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
  </div>

  <!-- Telefone / WhatsApp -->
  <div>
    <%= f.label :telefone, "Telefone", class: "block text-sm font-medium text-gray-700 dark:text-gray-200" %>
    <%= f.telephone_field :telefone, placeholder: "(11) 99999-9999",
          class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm 
                 focus:border-blue-500 focus:ring-blue-500 sm:text-sm
                 dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
  </div>

  <div>
    <%= f.label :whatsapp, "WhatsApp", class: "block text-sm font-medium text-gray-700 dark:text-gray-200" %>
    <%= f.text_field :whatsapp,
          class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm 
                 focus:border-blue-500 focus:ring-blue-500 sm:text-sm
                 dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
  </div>

  <!-- Endereço + CEP -->
  <div>
    <%= f.label :endereco, "Endereço", class: "block text-sm font-medium text-gray-700 dark:text-gray-200" %>
    <%= f.text_field :endereco,
          class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm 
                 focus:border-blue-500 focus:ring-blue-500 sm:text-sm
                 dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
  </div>

  <div>
    <%= f.label :cep, "CEP", class: "block text-sm font-medium text-gray-700 dark:text-gray-200" %>
    <%= f.text_field :cep, placeholder: "18000-000",
          class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm 
                 focus:border-blue-500 focus:ring-blue-500 sm:text-sm
                 dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
  </div>

  <!-- Documentos -->
  <div>
    <%= f.label :cpf, "CPF", class: "block text-sm font-medium text-gray-700 dark:text-gray-200" %>
    <%= f.text_field :cpf,
          class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm 
                 focus:border-blue-500 focus:ring-blue-500 sm:text-sm
                 dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
  </div>

  <div>
    <%= f.label :cnpj, "CNPJ", class: "block text-sm font-medium text-gray-700 dark:text-gray-200" %>
    <%= f.text_field :cnpj,
          class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm 
                 focus:border-blue-500 focus:ring-blue-500 sm:text-sm
                 dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
  </div>

  <!-- Dimensões e Peso -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-2">
    <div>
      <%= f.label :largura, "Largura (cm)", class: "block text-sm font-medium text-gray-700 dark:text-gray-200" %>
      <%= f.number_field :largura, step: 1,
            class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm 
                   focus:border-blue-500 focus:ring-blue-500 sm:text-sm
                   dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
    </div>
    <div>
      <%= f.label :altura, "Altura (cm)", class: "block text-sm font-medium text-gray-700 dark:text-gray-200" %>
      <%= f.number_field :altura, step: 1,
            class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm 
                   focus:border-blue-500 focus:ring-blue-500 sm:text-sm
                   dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
    </div>
    <div>
      <%= f.label :profundidade, "Profundidade (cm)", class: "block text-sm font-medium text-gray-700 dark:text-gray-200" %>
      <%= f.number_field :profundidade, step: 1,
            class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm 
                   focus:border-blue-500 focus:ring-blue-500 sm:text-sm
                   dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
    </div>
    <div>
      <%= f.label :peso_aproximado, "Peso (kg)", class: "block text-sm font-medium text-gray-700 dark:text-gray-200" %>
      <%= f.number_field :peso_aproximado, step: 0.1,
            class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm 
                   focus:border-blue-500 focus:ring-blue-500 sm:text-sm
                   dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
    </div>
  </div>

  <!-- Observações -->
  <div>
    <%= f.label :observacoes, "Observações", class: "block text-sm font-medium text-gray-700 dark:text-gray-200" %>
    <%= f.text_area :observacoes, rows: 3,
          placeholder: "Alguma observação relevante...",
          class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm 
                 focus:border-blue-500 focus:ring-blue-500 sm:text-sm
                 dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
  </div>

  <!-- Campo extra (se existir no schema) -->
  <% if Cliente.column_names.include?("campo") %>
    <div>
      <%= f.label :campo, "Campo Extra", class: "block text-sm font-medium text-gray-700 dark:text-gray-200" %>
      <%= f.text_field :campo,
            class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm 
                   focus:border-blue-500 focus:ring-blue-500 sm:text-sm
                   dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
    </div>
  <% end %>

  <!-- Submit -->
  <div>
    <%= f.submit (cliente.persisted? ? "Atualizar Cliente" : "Criar Cliente"),
          class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold px-4 py-2 rounded-lg shadow transition" %>
  </div>
<% end %>

