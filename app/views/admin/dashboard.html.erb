<h1 class="text-3xl font-bold mb-6 text-gray-800">Dashboard Administrativa</h1>

<!-- FRETES -->
<h2 class="text-xl font-semibold mb-4 text-blue-700">Fretes</h2>
<table class="table-auto w-full mb-10 border-collapse border border-gray-300 shadow-md rounded-lg">
  <thead class="bg-blue-100">
    <tr>
      <th class="border px-4 py-2">ID</th>
      <th class="border px-4 py-2">Origem</th>
      <th class="border px-4 py-2">Destino</th>
      <th class="border px-4 py-2">Peso</th>
      <th class="border px-4 py-2">Status</th>
    </tr>
  </thead>
  <tbody>
    <% @fretes.each do |frete| %>
      <tr class="hover:bg-gray-50">
        <td class="border px-4 py-2"><%= frete.id %></td>
        <td class="border px-4 py-2"><%= frete.origem %></td>
        <td class="border px-4 py-2"><%= frete.destino %></td>
        <td class="border px-4 py-2"><%= frete.peso %></td>
        <td class="border px-4 py-2">
          <%# Badge de Status %>
          <% case frete.status.downcase %>
          <% when 'aguardando proposta' %>
            <span class="inline-block px-2 py-1 text-xs font-semibold bg-yellow-100 text-yellow-800 rounded">Aguardando</span>
          <% when 'proposta enviada' %>
            <span class="inline-block px-2 py-1 text-xs font-semibold bg-green-100 text-green-800 rounded">Enviada</span>
          <% else %>
            <span class="inline-block px-2 py-1 text-xs font-semibold bg-gray-200 text-gray-700 rounded"><%= frete.status %></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- CLIENTES -->
<h2 class="text-xl font-semibold mb-4 text-blue-700">Clientes</h2>
