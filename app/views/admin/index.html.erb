<div class="max-w-2xl mx-auto mt-10 bg-white p-8 rounded-2xl shadow">
  <h1 class="text-3xl font-bold text-orange-700 mb-6">⚙️ Configuração de Comissão</h1>

  <%= form_with model: @config, url: admin_update_path, local: true, class: "space-y-6" do |f| %>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Comissão padrão (%)</label>
      <%= f.number_field :comissao_padrao, step: 0.1, class: "w-full border border-gray-300 rounded-lg px-4 py-2" %>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Comissão para assinantes (%)</label>
      <%= f.number_field :comissao_assinante, step: 0.1, class: "w-full border border-gray-300 rounded-lg px-4 py-2" %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "Salvar", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded-xl shadow" %>
    </div>
  <% end %>
</div>
