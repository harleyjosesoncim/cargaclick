<!-- app/views/contatos/new.html.erb -->
<h1 class="text-2xl font-bold mb-4">Fale Conosco</h1>

<%= form_with model: @contato, class: "max-w-lg mx-auto bg-white dark:bg-gray-800 p-6 rounded-xl shadow-md" do |f| %>
  <div class="mb-4">
    <%= f.label :nome, class: "block font-semibold mb-1" %>
    <%= f.text_field :nome, class: "w-full p-2 border rounded" %>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: "block font-semibold mb-1" %>
    <%= f.email_field :email, class: "w-full p-2 border rounded" %>
  </div>

  <div class="mb-4">
    <%= f.label :mensagem, class: "block font-semibold mb-1" %>
    <%= f.text_area :mensagem, rows: 4, class: "w-full p-2 border rounded" %>
  </div>

  <%= f.submit "Enviar", class: "bg-purple-700 text-white px-4 py-2 rounded hover:bg-purple-800" %>
<% end %>
