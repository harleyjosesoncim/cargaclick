<% if object.errors.any? %>
  <div class="bg-red-100 text-red-700 p-4 rounded mb-4">
    <p><strong>Corrija os seguintes erros:</strong></p>
    <ul class="list-disc list-inside">
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
