<div class="flex flex-wrap gap-3 mb-6">
  <!-- Botão para Fretes (só mostra se a rota existir) -->
  <% if defined?(fretes_path) && respond_to?(:fretes_path) %>
    <%= link_to fretes_path, class: "px-4 py-2 bg-gray-200 text-gray-800 rounded-lg shadow hover:bg-gray-300 transition flex items-center gap-2" do %>
      ⬅ <span>Voltar para Fretes</span>
    <% end %>
  <% end %>

  <!-- Botão para a página inicial -->
  <%= link_to root_path, class: "px-4 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition flex items-center gap-2" do %>
    🏠 <span>Início</span>
  <% end %>
</div>

