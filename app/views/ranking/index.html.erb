<div class="max-w-3xl mx-auto mt-10 bg-white p-8 rounded-xl shadow">
  <h1 class="text-3xl font-bold text-purple-700 mb-6">🏆 Ranking dos Transportadores</h1>
  <ol class="space-y-2">
    <% @top_transportadores.each_with_index do |t, i| %>
      <li class="flex justify-between items-center p-3 rounded-lg bg-purple-50 hover:bg-purple-100">
        <span class="font-semibold text-gray-800"><%= i + 1 %>. <%= t.nome %></span>
        <span class="text-purple-700 font-bold"><%= t.fretes.where(entregue: true).count * 15 %> pts</span>
      </li>
    <% end %>
  </ol>
</div>
