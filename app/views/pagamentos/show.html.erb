<div class="container mx-auto p-4">
  <div class="bg-white dark:bg-gray-900 shadow rounded-lg p-6">
    <h1 class="text-xl font-bold mb-6 text-gray-800 dark:text-gray-100">
      ðŸ’¸ Pagamento ##<%= @pagamento.id %>
    </h1>

    <!-- RelaÃ§Ãµes -->
    <p><strong>Frete:</strong>
      <%= link_to "##{@pagamento.frete_id}", frete_path(@pagamento.frete), class: "underline" %>
    </p>
    <p><strong>Cliente:</strong> <%= @pagamento.cliente_nome || "N/A" %></p>
    <p><strong>Transportador:</strong> <%= @pagamento.transportador_nome || "N/A" %></p>

    <!-- Valores -->
    <div class="mt-4 space-y-1">
      <p><strong>Total:</strong> <%= number_to_currency(@pagamento.valor_total || @pagamento.valor) %></p>
      <p><strong>LÃ­quido Transportador:</strong> <%= number_to_currency(@pagamento.valor_liquido) %></p>
      <p><strong>ComissÃ£o CargaClick:</strong> <%= number_to_currency(@pagamento.comissao_cargaclick) %></p>
    </div>

    <!-- Status + AÃ§Ãµes (Turbo Stream) -->
    <div id="<%= dom_id(@pagamento, :status) %>">
      <p class="mt-4">
        <strong>Status:</strong>
        <span class="px-2 py-1 rounded text-sm font-bold
          <%= case @pagamento.status
              when "liberado"  then "bg-green-200 text-green-800"
              when "escrow"    then "bg-indigo-200 text-indigo-800"
              when "confirmado" then "bg-teal-200 text-teal-800"
              when "pendente"  then "bg-yellow-200 text-yellow-800"
              when "cancelado" then "bg-red-200 text-red-800"
              when "estornado" then "bg-gray-200 text-gray-800"
              else "bg-gray-200 text-gray-800" end %>">
          <%= @pagamento.status_label %>
        </span>
      </p>

      <div class="mt-6 flex flex-wrap gap-3">
        <% if @pagamento.pendente? %>
          <%= button_to "Marcar como Pago (Escrow)",
              pagamento_path(@pagamento, status: "escrow"),
              method: :patch,
              data: { turbo_stream: true },
              class: "px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700" %>

          <%= button_to "Cancelar",
              pagamento_path(@pagamento, status: "cancelado"),
              method: :patch,
              data: { turbo_stream: true, confirm: "Deseja realmente cancelar este pagamento?" },
              class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700" %>
        <% elsif @pagamento.escrow? %>
          <%= button_to "Liberar repasse (Pix)",
              liberar_pagamento_path(@pagamento),
              method: :post,
              data: { turbo_stream: true, confirm: "Confirmar liberaÃ§Ã£o do repasse ao transportador?" },
              class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700" %>
        <% else %>
          <span class="text-sm text-gray-500 italic">Pagamento encerrado</span>
        <% end %>

        <%= link_to "Voltar", pagamentos_path,
            class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
      </div>
    </div>

    <!-- Auditoria -->
    <div class="mt-6 space-y-1 text-sm text-gray-600 dark:text-gray-300">
      <p><strong>TXID:</strong> <%= @pagamento.txid || "N/A" %></p>
      <p><strong>Escrow em:</strong> <%= @pagamento.respond_to?(:escrow_at) && @pagamento.escrow_at ? l(@pagamento.escrow_at, format: :short) : "N/A" %></p>
      <p><strong>Repasse TXID:</strong> <%= @pagamento.respond_to?(:payout_txid) ? (@pagamento.payout_txid.presence || "N/A") : "N/A" %></p>
      <p><strong>Repasse status:</strong> <%= @pagamento.respond_to?(:payout_status) ? (@pagamento.payout_status.presence || "N/A") : "N/A" %></p>
      <p><strong>Liberado em:</strong> <%= @pagamento.respond_to?(:liberado_at) && @pagamento.liberado_at ? l(@pagamento.liberado_at, format: :short) : "N/A" %></p>
      <p><strong>Criado em:</strong> <%= l(@pagamento.created_at, format: :short) %></p>
      <p><strong>Atualizado em:</strong> <%= l(@pagamento.updated_at, format: :short) %></p>
    </div>
  </div>
</div>
