<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 p-4">
  <div class="bg-white rounded-3xl shadow-2xl p-6 sm:p-8 max-w-md w-full border border-blue-200">
    <div class="flex items-center justify-center mb-6">
      <span class="text-4xl text-blue-600">🔐</span>
    </div>

    <h2 class="text-2xl font-bold text-center text-blue-700 mb-6">Entrar no CargaClick</h2>

    <%= form_with model: resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }, class: "space-y-6" do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class: "w-full border rounded px-3 py-2" %>
      </div>

      <div>
        <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, required: true, autocomplete: "current-password", class: "w-full border rounded px-3 py-2" %>
      </div>

      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, "Lembrar-me", class: "text-sm text-gray-600" %>
      </div>

      <div>
        <%= f.submit "Entrar", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
