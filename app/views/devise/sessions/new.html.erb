<!-- app/views/devise/sessions/new.html.erb -->
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 p-4">
  <div class="bg-white rounded-3xl shadow-2xl p-6 sm:p-8 max-w-md w-full border border-blue-200">
    <div class="flex items-center justify-center mb-6">
      <span class="text-4xl text-blue-600">ğŸ”</span>
    </div>

    <h2 class="text-2xl font-bold text-center text-blue-700 mb-6">Entrar no CargaClick</h2>

    <% if flash.alert.present? %>
      <div class="mb-4 rounded-md border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
        <%= flash.alert %>
      </div>
    <% end %>

    <%= form_for(resource,
                 as: resource_name,
                 url: session_path(resource_name),
                 html: { class: "space-y-6", autocomplete: "on" },
                 data: { turbo: false }) do |f| %>

      <div>
        <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email,
              required: true,
              autofocus: true,
              autocomplete: "email",
              placeholder: "master.cliente@cargaclick.com",
              class: "w-full rounded-lg border border-gray-300 px-3 py-2 outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div>
        <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password,
              required: true,
              autocomplete: "current-password",
              placeholder: "Sua senha",
              class: "w-full rounded-lg border border-gray-300 px-3 py-2 outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-2">
          <%= f.check_box :remember_me, class: "rounded" %>
          <%= f.label :remember_me, "Lembrar-me", class: "text-sm text-gray-600 select-none" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Entrar",
              class: "w-full rounded-lg bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 transition" %>
      </div>
    <% end %>

    <div class="mt-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
