<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 p-4">
  <div class="bg-white rounded-3xl shadow-2xl p-8 sm:p-10 max-w-md w-full border border-blue-200">
    <h2 class="text-2xl font-bold text-center text-blue-700 mb-6">Alterar Senha</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div>
        <%= f.label :password, "Nova Senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full border rounded px-3 py-2" %>
      </div>

      <div class="mt-4">
        <%= f.label :password_confirmation, "Confirmar Nova Senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border rounded px-3 py-2" %>
      </div>

      <div class="mt-4">
        <%= f.submit "Atualizar Senha", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

