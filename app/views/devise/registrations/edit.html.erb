<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 p-4">
  <div class="bg-white rounded-3xl shadow-2xl p-8 sm:p-10 max-w-md w-full border border-blue-200">
    <h2 class="text-2xl font-bold text-center text-blue-700 mb-6">Editar Conta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border rounded px-3 py-2" %>
      </div>

      <div class="mt-4">
        <%= f.label :password, "Nova Senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full border rounded px-3 py-2" %>
      </div>

      <div class="mt-4">
        <%= f.label :password_confirmation, "Confirmar Nova Senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border rounded px-3 py-2" %>
      </div>

      <div class="mt-4">
        <%= f.label :current_password, "Senha Atual", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full border rounded px-3 py-2" %>
      </div>

      <div class="mt-4">
        <%= f.submit "Atualizar", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600">
      <%= button_to "Cancelar minha conta", registration_path(resource_name), method: :delete, data: { confirm: "Tem certeza?" }, class: "text-red-600 hover:underline" %>
    </div>
  </div>
</div>
