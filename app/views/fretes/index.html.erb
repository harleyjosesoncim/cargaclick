<h1 class="text-2xl font-bold mb-6">Lista de Fretes</h1>

<table class="min-w-full bg-white shadow rounded-lg">
  <thead>
    <tr class="bg-gray-100">
      <th class="px-4 py-2">ID</th>
      <th class="px-4 py-2">Cliente</th>
      <th class="px-4 py-2">Transportador</th>
      <th class="px-4 py-2">Valor</th>
      <th class="px-4 py-2">Status</th>
      <th class="px-4 py-2">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @fretes.each do |frete| %>
      <tr class="border-t">
        <td class="px-4 py-2"><%= frete.id %></td>
        <td class="px-4 py-2"><%= frete.cliente&.nome || "—" %></td>
        <td class="px-4 py-2"><%= frete.transportador&.nome || "—" %></td>
        <td class="px-4 py-2"><%= number_to_currency(frete.valor_total) %></td>
        <td class="px-4 py-2"><%= status_badge(frete) %></td>
        <td class="px-4 py-2">
          <%= link_to "Ver", frete_path(frete), class: "text-blue-600 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
