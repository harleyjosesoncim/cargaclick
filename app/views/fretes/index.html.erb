<div class="flex flex-wrap gap-3 pt-2">

  <!-- Ver detalhes -->
  <%= link_to 'Ver', frete_path(frete),
        class: "text-blue-600 hover:underline font-semibold text-sm" %>

  <!-- Editar frete -->
  <%= link_to 'Editar', edit_frete_path(frete),
        class: "text-yellow-600 hover:underline font-semibold text-sm" %>

  <!-- Rastrear frete -->
  <%= link_to 'Rastrear', rastreamento_frete_path(frete),
        class: "text-indigo-600 hover:underline font-semibold text-sm" %>

  <!-- Marcar como entregue (somente se nÃ£o estiver entregue ainda) -->
  <% if frete.pendente? || frete.em_andamento? %>
    <%= button_to 'Marcar como Entregue',
          entregar_frete_path(frete),
          method: :post,
          data: { confirm: 'Tem certeza que deseja marcar este frete como entregue?' },
          class: "bg-green-600 hover:bg-green-700 text-white font-semibold px-4 py-2 rounded text-sm shadow transition" %>
  <% end %>

  <!-- Excluir frete -->
  <%= link_to 'Excluir', frete_path(frete),
        method: :delete,
        data: { confirm: 'Tem certeza que deseja excluir este frete?' },
        class: "text-red-600 hover:underline font-semibold text-sm" %>

</div>

