<div class="max-w-4xl mx-auto p-6">
  <h1 class="text-2xl font-semibold mb-4">Meus fretes</h1>
  <div class="mb-4">
    <%= link_to "➕ Novo frete", new_frete_path,
        class: "px-4 py-2 rounded bg-blue-600 text-white hover:bg-blue-700" %>
  </div>
  <% if @fretes.any? %>
    <ul class="space-y-3">
      <% @fretes.each do |frete| %>
        <li class="p-4 bg-white rounded shadow flex items-center justify-between">
          <div>
            <p class="font-semibold"><%= frete.origem %> → <%= frete.destino %></p>
            <p class="text-sm text-gray-500">Criado em <%= l(frete.created_at, format: :short) %></p>
          </div>
          <div class="space-x-2">
            <%= link_to "Abrir", frete_path(frete),
                class: "px-3 py-1 rounded border hover:bg-gray-50" %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-600">Você ainda não possui fretes.</p>
  <% end %>
</div>
