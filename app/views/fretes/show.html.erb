<div class="max-w-3xl mx-auto p-6 space-y-4">
  <h1 class="text-2xl font-semibold">Frete #<%= @frete.id %></h1>
  <div class="p-4 bg-white rounded shadow">
    <dl class="grid grid-cols-1 md:grid-cols-2 gap-2">
      <div><dt class="font-medium">Origem</dt><dd><%= @frete.origem %></dd></div>
      <div><dt class="font-medium">Destino</dt><dd><%= @frete.destino %></dd></div>
      <div><dt class="font-medium">Peso</dt><dd><%= @frete.peso %> kg</dd></div>
      <div><dt class="font-medium">Dimensões</dt>
        <dd><%= [@frete.largura, @frete.altura, @frete.profundidade].compact.join(" x ") %></dd>
      </div>
      <div class="md:col-span-2">
        <dt class="font-medium">Descrição</dt>
        <dd><%= simple_format(@frete.descricao) %></dd>
      </div>
    </dl>
  </div>
  <div class="flex gap-3">
    <%= link_to "Voltar", fretes_path, class: "px-4 py-2 rounded border" %>
  </div>
</div>
