<div class="max-w-4xl mx-auto mt-8">
  <h1 class="text-2xl font-bold text-blue-800 mb-4">üìç Rastreamento do Frete</h1>

  <div class="bg-white rounded-xl shadow p-4 mb-4">
    <p><strong>Origem:</strong> <%= @frete.cep_origem %></p>
    <p><strong>Destino:</strong> <%= @frete.cep_destino %></p>
    <p><strong>Status:</strong> <%= @frete.entregue? ? "Entregue ‚úÖ" : "Em tr√¢nsito üöö" %></p>
  </div>

  <div id="map" class="w-full h-[400px] rounded-xl shadow border"></div>
</div>

<%= javascript_include_tag "https://unpkg.com/leaflet@1.9.3/dist/leaflet.js" %>
<%= stylesheet_link_tag "https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" %>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const map = L.map('map').setView([-23.5, -46.6], 10); // Posi√ß√£o inicial gen√©rica (SP)

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      maxZoom: 19,
      attribution: '&copy; OpenStreetMap'
    }).addTo(map);

    // Marcadores fict√≠cios ‚Äî substitua por coordenadas reais se dispon√≠veis
    L.marker([-23.5, -46.6]).addTo(map).bindPopup("Origem").openPopup();
    L.marker([-23.6, -46.7]).addTo(map).bindPopup("Destino");
  });
</script>
