<%= render 'shared/erros', object: @frete %>

<%= form_with(model: @frete, local: true) do |form| %>
  <div class="space-y-6">

    <div>
      <%= form.label :cep_origem, "Origem (CEP ou Endereço)", class: "block font-medium text-gray-700" %>
      <%= form.text_field :cep_origem, placeholder: "Ex: 18000-000", class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :cep_destino, "Destino (CEP ou Endereço)", class: "block font-medium text-gray-700" %>
      <%= form.text_field :cep_destino, placeholder: "Ex: 11000-000", class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :descricao, "Descrição da Carga", class: "block font-medium text-gray-700" %>
      <%= form.text_area :descricao, rows: 3, placeholder: "Ex: Mudança residencial, produtos perecíveis...", class: "w-full border rounded px-3 py-2" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div>
        <%= form.label :peso, "Peso (kg)", class: "block font-medium text-gray-700" %>
        <%= form.number_field :peso, step: 0.1, class: "w-full border rounded px-3 py-2" %>
      </div>
      <div>
        <%= form.label :largura, "Largura (cm)", class: "block font-medium text-gray-700" %>
        <%= form.number_field :largura, step: 1, class: "w-full border rounded px-3 py-2" %>
      </div>
      <div>
        <%= form.label :altura, "Altura (cm)", class: "block font-medium text-gray-700" %>
        <%= form.number_field :altura, step: 1, class: "w-full border rounded px-3 py-2" %>
      </div>
      <div>
        <%= form.label :profundidade, "Profundidade (cm)", class: "block font-medium text-gray-700" %>
        <%= form.number_field :profundidade, step: 1, class: "w-full border rounded px-3 py-2" %>
      </div>
    </div>

    <div class="text-right">
      <%= form.submit "Simular Frete", class: "w-full md:w-auto bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-xl shadow transition" %>
    </div>
  </div>
<% end %>
