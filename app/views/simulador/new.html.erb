<div class="max-w-xl mx-auto px-4 py-10">
  <h1 class="text-3xl font-bold text-center text-blue-700 mb-8">Simular Frete ðŸšš</h1>

  <div class="bg-white shadow-xl rounded-2xl p-8 border border-blue-100">
    <%= form_with url: simulador_index_path, method: :post, local: true, html: { id: "frete-form" } do %>
      
      <div class="mb-6">
        <label class="block text-gray-700 text-lg font-semibold mb-2">Origem (CEP)</label>
        <%= text_field_tag :origem, nil, placeholder: "Digite o CEP de origem", class: "w-full px-4 py-3 border rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-400" %>
      </div>

      <div class="mb-6">
        <label class="block text-gray-700 text-lg font-semibold mb-2">Destino (CEP)</label>
        <%= text_field_tag :destino, nil, placeholder: "Digite o CEP de destino", class: "w-full px-4 py-3 border rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-400" %>
      </div>

      <div class="flex justify-center">
        <%= submit_tag "Calcular Frete", id: "submit-btn", class: "bg-blue-600 hover:bg-blue-700 text-white text-lg font-semibold px-6 py-3 rounded-2xl shadow transition duration-300 ease-in-out" %>
      </div>

    <% end %>
  </div>
</div>

<!-- Spinner de Loading (invisÃ­vel atÃ© o envio do form) -->
<div id="loading-spinner" class="hidden fixed inset-0 bg-white bg-opacity-70 flex items-center justify-center z-50">
  <div class="animate-spin rounded-full h-16 w-16 border-4 border-blue-600 border-t-transparent"></div>
</div>

<!-- Script para ativar Spinner e alterar botÃ£o -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('frete-form');
    const button = document.getElementById('submit-btn');
    const spinner = document.getElementById('loading-spinner');

    form.addEventListener('submit', function() {
      button.disabled = true;
      button.innerText = "Calculando...";
      spinner.classList.remove('hidden');
    });
  });
</script>

