<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-green-50 to-teal-100 p-4">
  <div class="bg-white rounded-3xl shadow-2xl p-8 sm:p-10 max-w-md w-full border border-green-200">

    <h2 class="text-2xl font-bold text-center text-green-700 mb-6">Novo Transportador</h2>

    <%= form_with(model: @transportador, local: true, class: "space-y-6") do |form| %>
      <% if @transportador.errors.any? %>
        <div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4">
          <h2><%= pluralize(@transportador.errors.count, "erro") %> impediram o salvamento:</h2>
          <ul>
            <% @transportador.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :nome, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :nome, class: "w-full border rounded px-3 py-2" %>
      </div>

      <div>
        <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.email_field :email, class: "w-full border rounded px-3 py-2" %>
      </div>

      <div>
        <%= form.label :telefone, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :telefone, class: "w-full border rounded px-3 py-2" %>
      </div>

      <div>
        <%= form.label :endereco, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :endereco, class: "w-full border rounded px-3 py-2" %>
      </div>

      <div>
        <%= form.label :cep, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :cep, class: "w-full border rounded px-3 py-2" %>
      </div>

      <div>
        <%= form.submit "Salvar Transportador", class: "w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>
