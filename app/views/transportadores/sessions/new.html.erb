<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-green-50 to-green-100 p-4">
  <div class="bg-white rounded-3xl shadow-2xl p-8 sm:p-10 max-w-md w-full border border-green-200">

    <div class="flex items-center justify-center mb-6">
      <div class="text-4xl text-green-600">üîê</div>
    </div>

    <h2 class="text-2xl font-bold text-center text-green-700 mb-6">
      Login Transportador
    </h2>

    <%# =============================== %>
    <%# FORMUL√ÅRIO DEVise ‚Äì BLINDADO %>
    <%# =============================== %>

    <%= form_with(
          scope: (defined?(resource_name) ? resource_name : :transportador),
          url: (respond_to?(:transportador_session_path) ? transportador_session_path : "/transportadores/sign_in"),
          html: { autocomplete: "off" },
          local: true,
          class: "space-y-6"
        ) do |f| %>

      <% if flash.present? && flash[:alert].present? %>
        <div class="bg-red-100 text-red-700 px-4 py-2 rounded text-sm">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email,
              required: true,
              autofocus: true,
              autocomplete: "email",
              class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password,
              required: true,
              autocomplete: "current-password",
              class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <%# remember_me s√≥ aparece se o model suportar %>
      <% if f.object.respond_to?(:remember_me) %>
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "mr-2" %>
            <%= f.label :remember_me, class: "text-sm text-gray-600" %>
          </div>

          <% if respond_to?(:new_transportador_password_path) %>
            <%= link_to "Esqueceu a senha?",
                  new_transportador_password_path,
                  class: "text-sm text-green-600 hover:underline ml-auto" %>
          <% end %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Entrar",
              class: "w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded shadow transition" %>
      </div>

    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600">
      N√£o tem uma conta?
      <% if respond_to?(:new_transportador_registration_path) %>
        <%= link_to "Criar Conta",
              new_transportador_registration_path,
              class: "text-green-600 hover:underline font-medium" %>
      <% end %>
    </div>

  </div>
</div>
