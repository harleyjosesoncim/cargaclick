<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-green-50 to-green-100 p-4">
  <div class="bg-white rounded-3xl shadow-2xl p-8 sm:p-10 max-w-md w-full border border-green-200">

    <h2 class="text-2xl font-bold text-center text-green-700 mb-6">Login Transportador</h2>

    <%= form_with scope: :transportador, url: transportador_session_path, local: true, class: "space-y-6" do |f| %>
      <% if flash[:alert].present? %>
        <div class="bg-red-100 text-red-700 px-4 py-2 rounded text-sm"><%= flash[:alert] %></div>
      <% end %>

      <div>
        <%= f.label :email %>
        <%= f.email_field :email, required: true, class: "w-full border rounded px-3 py-2" %>
      </div>

      <div>
        <%= f.label :password %>
        <%= f.password_field :password, required: true, class: "w-full border rounded px-3 py-2" %>
      </div>

      <%= f.submit "Entrar", class: "w-full bg-green-600 text-white font-bold py-2 rounded" %>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600">
      NÃ£o tem uma conta?
      <%= link_to "Criar conta como transportador", new_transportador_registration_path, class: "text-green-600 hover:underline font-semibold" %>
    </div>
  </div>
</div>
