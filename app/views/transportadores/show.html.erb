<!-- app/views/transportadores/show.html.erb -->

<div class="max-w-4xl mx-auto p-6">
  <h1 class="text-3xl font-bold text-green-700 mb-6">Detalhes do Transportador</h1>

  <div class="bg-white shadow-lg rounded-lg p-6">
    <p class="text-gray-800 mb-2"><strong>Nome:</strong> <%= @transportador.nome %></p>
    <p class="text-gray-800 mb-2"><strong>CPF:</strong> <%= @transportador.cpf %></p>
    <p class="text-gray-800 mb-2"><strong>Telefone:</strong> <%= @transportador.telefone %></p>
    <p class="text-gray-800 mb-2"><strong>Endereço:</strong> <%= @transportador.endereco %></p>
    <p class="text-gray-800 mb-2"><strong>CEP:</strong> <%= @transportador.cep %></p>
    <p class="text-gray-800 mb-2"><strong>Tipo do Veículo:</strong> <%= @transportador.tipo_veiculo %></p>
    <p class="text-gray-800 mb-2"><strong>Carga Máxima:</strong> <%= @transportador.carga_maxima %></p>
    <p class="text-gray-800 mb-2"><strong>Valor por KM:</strong> <%= number_to_currency(@transportador.valor_km) %></p>
  </div>

  <%= link_to 'Editar', edit_transportador_path(@transportador), class: "inline-block bg-yellow-500 text-white px-4 py-2 rounded mt-4" %>
  <%= link_to 'Voltar', transportadores_path, class: "inline-block bg-gray-500 text-white px-4 py-2 rounded mt-4" %>
</div>
