<%= form_with(model: @transportador, url: transportadores_path, local: true) do |form| %>
  <h2 class="text-2xl font-bold mb-6">Cadastro de Transportador</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

    <div>
      <%= form.label :nome, "Nome Completo", class: "block font-semibold mb-1" %>
      <%= form.text_field :nome, required: true, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :cpf, "CPF", class: "block font-semibold mb-1" %>
      <%= form.text_field :cpf, required: true, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :telefone, "Telefone", class: "block font-semibold mb-1" %>
      <%= form.text_field :telefone, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :endereco, "Endereço", class: "block font-semibold mb-1" %>
      <%= form.text_field :endereco, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :cep, "CEP", class: "block font-semibold mb-1" %>
      <%= form.text_field :cep, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :tipo_veiculo, "Tipo de Veículo", class: "block font-semibold mb-1" %>
      <%= form.text_field :tipo_veiculo, placeholder: "Ex: Caminhão, Van, Carreta...", class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :carga_maxima, "Carga Máxima (kg)", class: "block font-semibold mb-1" %>
      <%= form.number_field :carga_maxima, min: 0, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :valor_km, "Valor por KM (R$)", class: "block font-semibold mb-1" %>
      <%= form.text_field :valor_km, placeholder: "Ex: 3.50", class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :largura, "Largura (cm)", class: "block font-semibold mb-1" %>
      <%= form.text_field :largura, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :altura, "Altura (cm)", class: "block font-semibold mb-1" %>
      <%= form.text_field :altura, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :profundidade, "Profundidade (cm)", class: "block font-semibold mb-1" %>
      <%= form.text_field :profundidade, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= form.label :peso_aproximado, "Peso Aproximado da Carga (kg)", class: "block font-semibold mb-1" %>
      <%= form.text_field :peso_aproximado, class: "w-full border rounded px-3 py-2" %>
    </div>

  </div>

  <div class="mt-6">
    <%= form.submit "Cadastrar Transportador", class: "bg-blue-600 text-white px-6 py-3 rounded font-semibold hover:bg-blue-700 transition" %>
  </div>
<% end %>
