<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-green-50 to-green-100 p-4">
  <div class="bg-white rounded-3xl shadow-2xl p-8 sm:p-10 max-w-md w-full border border-green-200">

    <!-- √çcone / Logo -->
    <div class="flex items-center justify-center mb-6">
      <div class="text-4xl text-green-600">üöö</div>
    </div>

    <!-- T√≠tulo -->
    <h2 class="text-2xl font-bold text-center text-green-700 mb-2">
      Editar cadastro de transportador
    </h2>
    <p class="text-center text-sm text-gray-600 mb-6">
      Atualize seus dados de acesso, documentos e ve√≠culo.
    </p>

    <!-- Erros de valida√ß√£o -->
    <% if resource.errors.any? %>
      <div class="mb-4 bg-red-50 border border-red-200 text-red-700 text-sm rounded-lg p-3">
        <p class="font-semibold mb-1">Revise os campos abaixo:</p>
        <ul class="list-disc list-inside text-xs">
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Flashes -->
    <% if flash[:notice] %>
      <div class="mb-3 bg-green-100 text-green-700 px-4 py-2 rounded text-sm">
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="mb-3 bg-red-100 text-red-700 px-4 py-2 rounded text-sm">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with model: resource,
                  as: resource_name,
                  url: transportador_registration_path,
                  method: :put,
                  local: true,
                  html: { autocomplete: "off", class: "space-y-6" } do |f| %>

      <!-- Bloco 1: Dados de acesso -->
      <div class="space-y-4">
        <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wide">
          Dados de acesso
        </h3>

        <div>
          <%= f.label :nome, "Nome completo", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :nome,
                           required: true,
                           placeholder: "Digite seu nome completo",
                           class: "w-full border rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-green-500" %>
        </div>

        <div>
          <%= f.label :email, "E-mail de acesso", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email,
                            required: true,
                            autocomplete: "email",
                            placeholder: "seuemail@exemplo.com",
                            class: "w-full border rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-green-500" %>
        </div>
      </div>

      <!-- Bloco 2: Documentos -->
      <div class="space-y-4 pt-2 border-t border-gray-100">
        <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wide">
          Documentos
        </h3>

        <div class="grid sm:grid-cols-2 gap-4">
          <div>
            <%= f.label :tipo_documento, "Tipo de documento", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.select :tipo_documento,
                         options_for_select([["CPF", "cpf"], ["CNPJ", "cnpj"]], f.object.tipo_documento),
                         { include_blank: "Selecione" },
                         class: "w-full border rounded px-3 py-2 text-sm bg-white focus:outline-none focus:ring-2 focus:ring-green-500" %>
          </div>

          <div>
            <%= f.label :documento, "N√∫mero do documento", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :documento,
                             required: true,
                             placeholder: "Somente n√∫meros",
                             class: "w-full border rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-green-500" %>
          </div>
        </div>

        <div class="grid sm:grid-cols-2 gap-4">
          <div>
            <%= f.label :cnh_numero, "N√∫mero da CNH", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :cnh_numero,
                             required: true,
                             placeholder: "CNH do condutor",
                             class: "w-full border rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-green-500" %>
          </div>

          <div>
            <%= f.label :placa_veiculo, "Placa do ve√≠culo", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :placa_veiculo,
                             required: true,
                             placeholder: "Ex: ABC1D23",
                             class: "w-full border rounded px-3 py-2 text-sm uppercase focus:outline-none focus:ring-2 focus:ring-green-500" %>
          </div>
        </div>
      </div>

      <!-- Bloco 3: Dados do ve√≠culo -->
      <div class="space-y-4 pt-2 border-t border-gray-100">
        <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wide">
          Dados do ve√≠culo
        </h3>

        <div>
          <%= f.label :tipo_veiculo, "Tipo de ve√≠culo", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :tipo_veiculo,
                           required: true,
                           placeholder: "Ex: Moto, Carro, Van, Caminh√£o",
                           class: "w-full border rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-green-500" %>
        </div>
      </div>

      <!-- Bloco 4: Alterar senha (opcional) -->
      <div class="space-y-4 pt-2 border-t border-gray-100">
        <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wide">
          Alterar senha (opcional)
        </h3>

        <p class="text-xs text-gray-500">
          Preencha os campos abaixo apenas se desejar alterar sua senha. Caso contr√°rio, deixe em branco.
        </p>

        <div>
          <%= f.label :password, "Nova senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <% if defined?(@minimum_password_length) && @minimum_password_length.present? %>
            <p class="text-xs text-gray-500 mb-1">
              M√≠nimo de <%= @minimum_password_length %> caracteres.
            </p>
          <% end %>
          <%= f.password_field :password,
                               autocomplete: "new-password",
                               class: "w-full border rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-green-500" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirme a nova senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation,
                               autocomplete: "new-password",
                               class: "w-full border rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-green-500" %>
        </div>
      </div>

      <!-- Bloco 5: Senha atual -->
      <div class="space-y-2 pt-2 border-t border-gray-100">
        <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wide">
          Confirma√ß√£o
        </h3>

        <p class="text-xs text-gray-500">
          Por seguran√ßa, informe sua senha atual para salvar as altera√ß√µes.
        </p>

        <div>
          <%= f.label :current_password, "Senha atual", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :current_password,
                               required: true,
                               autocomplete: "current-password",
                               class: "w-full border rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-green-500" %>
        </div>
      </div>

      <!-- Bot√£o de envio -->
      <div class="pt-2">
        <%= f.submit "Salvar altera√ß√µes",
                     class: "w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2.5 px-4 rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-1 focus:ring-offset-green-50" %>
      </div>

    <% end %>

    <!-- A√ß√µes adicionais -->
    <div class="mt-6 text-center text-sm text-gray-600 space-y-2">
      <div>
        <%= link_to "Voltar para meus fretes", fretes_path, class: "text-green-600 hover:underline font-medium" %>
      </div>
      <div class="text-xs text-gray-400">
        Se precisar encerrar sua conta, entre em contato com o suporte do CargaClick.
      </div>
    </div>
  </div>
</div>
