<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-green-50 to-green-100 p-4">
  <div class="bg-white rounded-3xl shadow-2xl p-8 sm:p-10 max-w-md w-full border border-green-200">

    <div class="flex items-center justify-center mb-6">
      <div class="text-4xl text-green-600">ðŸšš</div>
    </div>

    <h2 class="text-2xl font-bold text-center text-green-700 mb-4">
      Cadastro de Transportador
    </h2>

    <% if resource.errors.any? %>
      <div class="mb-4 bg-red-50 border border-red-200 text-red-700 text-sm rounded-lg p-3">
        <p class="font-semibold mb-1">Revise os campos abaixo:</p>
        <ul class="list-disc list-inside text-xs">
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="mb-3 bg-green-100 text-green-700 px-4 py-2 rounded text-sm">
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="mb-3 bg-red-100 text-red-700 px-4 py-2 rounded text-sm">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with model: resource,
                  as: resource_name,
                  url: transportador_registration_path,
                  local: true,
                  html: { autocomplete: "off", class: "space-y-6" } do |f| %>

      <div>
        <%= f.label :nome, "Nome completo", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :nome,
                         required: true,
                         class: "w-full border rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div>
        <%= f.label :email, "E-mail de acesso", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email,
                          required: true,
                          autocomplete: "email",
                          class: "w-full border rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div>
        <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <% if defined?(@minimum_password_length) && @minimum_password_length.present? %>
          <p class="text-xs text-gray-500 mb-1">
            MÃ­nimo de <%= @minimum_password_length %> caracteres.
          </p>
        <% end %>
        <%= f.password_field :password,
                             required: true,
                             autocomplete: "new-password",
                             class: "w-full border rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Confirme a senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation,
                             required: true,
                             autocomplete: "new-password",
                             class: "w-full border rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div>
        <%= f.label :tipo_veiculo, "Tipo de veÃ­culo", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :tipo_veiculo,
                         required: true,
                         placeholder: "Ex: CaminhÃ£o, Van, Moto",
                         class: "w-full border rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div>
        <%= f.label :cnpj, "CNPJ", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :cnpj,
                         required: true,
                         placeholder: "Digite o CNPJ",
                         class: "w-full border rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-green-500" %>
      </div>

      <div>
        <%= f.submit "Criar conta",
                     class: "w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded shadow" %>
      </div>

    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600">
      JÃ¡ tem uma conta?
      <%= link_to "Entrar", new_transportador_session_path, class: "text-green-600 hover:underline font-medium" %>
    </div>
  </div>
</div>
