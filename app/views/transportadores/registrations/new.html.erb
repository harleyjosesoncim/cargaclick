<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-blue-100 p-4">
  <div class="bg-white rounded-3xl shadow-2xl p-8 sm:p-10 max-w-md w-full border border-blue-200">

    <h2 class="text-2xl font-bold text-center text-blue-700 mb-6">Cadastro Transportador</h2>

    <%= form_with scope: :transportador, url: transportador_registration_path, local: true, class: "space-y-6" do |f| %>
      <% if resource&.errors&.any? %>
        <div class="bg-red-100 text-red-700 px-4 py-2 rounded text-sm">
          <%= resource.errors.full_messages.join(", ") %>
        </div>
      <% end %>

      <div>
        <%= f.label :email %>
        <%= f.email_field :email, required: true, class: "w-full border rounded px-3 py-2" %>
      </div>

      <div>
        <%= f.label :password %>
        <%= f.password_field :password, required: true, class: "w-full border rounded px-3 py-2" %>
      </div>

      <div>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, required: true, class: "w-full border rounded px-3 py-2" %>
      </div>

      <%= f.submit "Criar conta", class: "w-full bg-blue-600 text-white font-bold py-2 rounded" %>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600">
      JÃ¡ tem conta?
      <%= link_to "Entrar", new_transportador_session_path, class: "text-blue-600 hover:underline font-semibold" %>
    </div>
  </div>
</div>
