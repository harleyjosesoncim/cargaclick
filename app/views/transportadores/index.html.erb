<div class="max-w-4xl mx-auto mt-10 bg-white p-6 rounded-xl shadow-lg">
  <h1 class="text-3xl font-extrabold text-blue-700 mb-6 border-b-2 border-blue-100 pb-2">Lista de Transportadoras</h1>

  <%= link_to "‚ûï Nova Transportadora", new_transportador_path, class: "mb-6 inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition ease-in-out duration-150" %>

  <div class="mb-8 p-4 bg-gray-50 rounded-lg shadow-sm">
    <%= form_with url: transportadores_path, method: :get, local: true, class: "flex flex-col sm:flex-row items-center gap-4" do %>
      <%= label_tag :cidade, "Pesquisar por Cidade:", class: "font-semibold text-gray-700 text-lg sm:w-auto w-full" %>
      <%= text_field_tag :cidade, params[:cidade], placeholder: "Digite a cidade", class: "flex-grow p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200 ease-in-out shadow-sm" %>
      <%= submit_tag "Pesquisar", class: "w-full sm:w-auto bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg shadow-md hover:shadow-lg transition duration-200 ease-in-out" %>
      <% if params[:cidade].present? %>
        <%= link_to "Limpar", transportadores_path, class: "w-full sm:w-auto ml-0 sm:ml-2 mt-2 sm:mt-0 text-gray-600 hover:text-gray-800 hover:underline transition duration-200 ease-in-out text-center py-2" %>
      <% end %>
    <% end %>
  </div>

  <div class="overflow-x-auto shadow-md rounded-lg">
    <table class="min-w-full bg-white">
      <thead class="bg-gray-100 border-b border-gray-200">
        <tr>
          <th class="py-3 px-6 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider">Nome</th>
          <th class="py-3 px-6 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider">CPF</th>
          <th class="py-3 px-6 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider">Tipo Ve√≠culo</th>
          <th class="py-3 px-6 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider">E-mail</th>
          <th class="py-3 px-6 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider">A√ß√µes</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @transportadores.each do |transportador| %>
          <tr class="hover:bg-gray-50 transition duration-150 ease-in-out">
            <td class="py-3 px-6 text-gray-800"><%= transportador.nome %></td>
            <td class="py-3 px-6 text-gray-800"><%= transportador.cpf %></td>
            <td class="py-3 px-6 text-gray-800"><%= transportador.tipo_veiculo %></td>
            <td class="py-3 px-6 text-gray-800">
              <%= transportador.respond_to?(:email) ? (transportador.email.presence || "-") : "-" %>
            </td>
            <td class="py-3 px-6">
              <%= link_to "Ver", transportador_path(transportador), class: "text-blue-600 hover:text-blue-800 font-medium hover:underline mr-4" %>
              <%= link_to "Editar", edit_transportador_path(transportador), class: "text-yellow-600 hover:text-yellow-800 font-medium hover:underline mr-4" %>
              <%= link_to "Excluir", transportador_path(transportador), method: :delete, data: { confirm: "Tem certeza que deseja excluir esta transportadora?" }, class: "text-red-600 hover:text-red-800 font-medium hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="max-w-4xl mx-auto mt-16">
  <%= link_to "üöõ Quero me Cadastrar como Transportador Parceiro",
              cadastro_transportador_path,
              class: "block w-full text-center bg-green-600 hover:bg-green-700 text-white font-bold py-4 rounded-xl shadow-lg text-xl transition duration-300 ease-in-out" %>
</div>

<div class="max-w-4xl mx-auto mt-16">
  <%= link_to "üöõ Quero me Cadastrar como Transportador Parceiro", cadastro_transportador_path, class: "block w-full text-center bg-green-600 hover:bg-green-700 text-white font-bold py-4 rounded-xl shadow-lg text-xl transition duration-300 ease-in-out" %>
</div>
