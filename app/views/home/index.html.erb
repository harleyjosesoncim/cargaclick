<% content_for :title, "CargaClick — Início" %>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body class="min-h-screen bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950 text-slate-100 flex flex-col">

  <!-- HEADER -->
  <header class="w-full px-6 py-4 flex justify-between items-center border-b border-slate-800 backdrop-blur relative">

    <!-- LOGO -->
    <div class="flex items-center gap-2">
      <div class="w-9 h-9 rounded-lg bg-purple-700 flex items-center justify-center font-bold">
        CC
      </div>
      <h1 class="text-lg font-bold tracking-wide text-purple-300">
        CargaClick
      </h1>
    </div>

    <!-- MENU DESKTOP -->
    <nav class="hidden md:flex gap-2 text-sm">
      <%= link_to "Entrar",
            "/login",
            class: "px-4 py-2 rounded-lg bg-purple-700 hover:bg-purple-600 transition" %>

      <%= link_to "Cadastrar",
            "/cadastro",
            class: "px-4 py-2 rounded-lg border border-purple-600 hover:bg-purple-800 transition" %>
    </nav>

    <!-- BOTÃO HAMBÚRGUER (MOBILE) -->
    <button id="menu-btn"
            class="md:hidden flex items-center justify-center w-10 h-10 rounded-lg border border-slate-700">
      <svg xmlns="http://www.w3.org/2000/svg"
           class="w-6 h-6"
           fill="none"
           viewBox="0 0 24 24"
           stroke="currentColor">
        <path stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>

    <!-- MENU MOBILE -->
    <nav id="mobile-menu"
         class="hidden absolute top-full left-0 w-full bg-slate-900 border-b border-slate-800 flex flex-col text-sm md:hidden z-50">

      <%= link_to "Entrar",
            "/login",
            class: "px-6 py-4 border-t border-slate-800 hover:bg-slate-800" %>

      <%= link_to "Cadastrar",
            "/cadastro",
            class: "px-6 py-4 border-t border-slate-800 hover:bg-slate-800" %>

      <%= link_to "Simular Frete",
            new_frete_path,
            class: "px-6 py-4 border-t border-slate-800 hover:bg-slate-800" %>

      <%= link_to "Fidelidade",
            fidelidade_path,
            class: "px-6 py-4 border-t border-slate-800 hover:bg-slate-800" %>

      <%= link_to "Contato",
            contato_path,
            class: "px-6 py-4 border-t border-slate-800 hover:bg-slate-800" %>
    </nav>

  </header>

  <!-- CONTEÚDO PRINCIPAL -->
  <main class="flex-1 px-6 py-14 max-w-5xl mx-auto space-y-14">

    <!-- HERO -->
    <section class="text-center space-y-6">
      <h2 class="text-4xl font-extrabold tracking-tight">
        Fretes rápidos.<br>
        <span class="text-purple-400">Sem intermediários.</span>
      </h2>

      <p class="text-slate-300 max-w-xl mx-auto">
        Simule, contrate e acompanhe seus fretes de forma simples,
        direta e transparente.
      </p>

      <%= link_to new_frete_path,
            class: "inline-flex items-center gap-2 mt-4 px-8 py-4 rounded-xl bg-yellow-500 text-black font-semibold hover:bg-yellow-400 transition" do %>
        <svg xmlns="http://www.w3.org/2000/svg"
             class="w-5 h-5"
             fill="none"
             viewBox="0 0 24 24"
             stroke="currentColor">
          <path stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
        Simular Frete
      <% end %>
    </section>

    <!-- PERFIS -->
    <section class="grid grid-cols-1 sm:grid-cols-2 gap-8">

      <!-- CLIENTE -->
      <div class="p-8 rounded-2xl bg-slate-900 border border-slate-800 text-center space-y-4 hover:border-blue-500 transition">
        <div class="mx-auto w-12 h-12 rounded-full bg-blue-600 flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg"
               class="w-6 h-6"
               fill="none"
               viewBox="0 0 24 24"
               stroke="currentColor">
            <path stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5.121 17.804A13.937 13.937 0 0112 15c2.5 0 4.847.655 6.879 1.804M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>

        <h3 class="text-lg font-semibold">Cliente</h3>
        <p class="text-sm text-slate-400">
          Solicite fretes, compare valores e acompanhe entregas.
        </p>

        <%= link_to "/cliente",
              class: "inline-block px-5 py-2 rounded-lg bg-blue-600 hover:bg-blue-500 transition" do %>
          Área do Cliente
        <% end %>
      </div>

      <!-- TRANSPORTADOR -->
      <div class="p-8 rounded-2xl bg-slate-900 border border-slate-800 text-center space-y-4 hover:border-green-500 transition">
        <div class="mx-auto w-12 h-12 rounded-full bg-green-600 flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg"
               class="w-6 h-6"
               fill="none"
               viewBox="0 0 24 24"
               stroke="currentColor">
            <path stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 17a2 2 0 11-4 0 2 2 0 014 0zm10 0a2 2 0 11-4 0 2 2 0 014 0zM3 13h13V6H3v7zm13 0h3l2 3v1h-5v-4z" />
          </svg>
        </div>

        <h3 class="text-lg font-semibold">Transportador</h3>
        <p class="text-sm text-slate-400">
          Receba solicitações e aumente sua renda.
        </p>

        <%= link_to "/transportador",
              class: "inline-block px-5 py-2 rounded-lg bg-green-600 hover:bg-green-500 transition" do %>
          Área do Transportador
        <% end %>
      </div>

    </section>

    <!-- LINKS SECUNDÁRIOS -->
    <section class="grid grid-cols-2 sm:grid-cols-4 gap-4 text-sm text-center">
      <%= link_to "Fidelidade", fidelidade_path, class: "p-4 rounded-xl bg-slate-800 hover:bg-slate-700 transition" %>
      <%= link_to "Relatórios", relatorios_path, class: "p-4 rounded-xl bg-slate-800 hover:bg-slate-700 transition" %>
      <%= link_to "Sobre", about_path, class: "p-4 rounded-xl bg-slate-800 hover:bg-slate-700 transition" %>
      <%= link_to "Contato", contato_path, class: "p-4 rounded-xl bg-slate-800 hover:bg-slate-700 transition" %>
    </section>

  </main>

  <!-- FOOTER -->
  <footer class="text-center text-xs text-slate-500 py-6 border-t border-slate-800">
    © <%= Time.current.year %> CargaClick · Tecnologia que conecta
  </footer>

  <!-- SCRIPT MENU MOBILE -->
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const btn = document.getElementById("menu-btn");
      const menu = document.getElementById("mobile-menu");

      if (btn && menu) {
        btn.addEventListener("click", function () {
          menu.classList.toggle("hidden");
        });
      }
    });
  </script>

</body>
</html>
